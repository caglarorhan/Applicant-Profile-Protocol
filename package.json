{
  "name": "applicant-profile-protocol",
  "version": "1.0.0",
  "type": "module",
  "description": "Applicant Profile Protocol (APP) - An open, JSON-based protocol for structured applicant profiles with validation and export tools",
  "keywords": [
    "resume",
    "cv",
    "applicant",
    "profile",
    "json-schema",
    "hr",
    "recruiting",
    "json-resume",
    "europass",
    "hr-xml"
  ],
  "author": "Caglar Orhan",
  "license": "Apache-2.0",
  "scripts": {
    "start": "node index.js",
    "validate": "node src/validate.js examples/full.json && node src/validate.js examples/minimal.json",
    "export:jsonresume": "node src/exporters/jsonresume.js examples/full.json > dist/full.jsonresume.json",
    "export:europass": "node src/exporters/europass.js examples/full.json > dist/full.europass.xml",
    "export:hrxml": "node src/exporters/hrxml.js examples/full.json > dist/full.hrxml.xml",
    "export:jsonld": "node src/exporters/jsonld.js examples/full.json > dist/full.jsonld.json"
  },
  "bin": {
    "app": "src/cli.js"
  },
  "files": [
    "src/",
    "schema/",
    "examples/",
    "SPEC.md",
    "README.md"
  ],
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caglarorhan/Applicant-Profile-Protocol.git"
  },
  "bugs": {
    "url": "https://github.com/caglarorhan/Applicant-Profile-Protocol/issues"
  },
  "homepage": "https://app-protocol.org"
}
